{
  "swagger": "2.0",
  "info": {
    "title": "Work tracker API",
    "description": "Work tracker API",
    "version": "1.0.0"
  },
  "host": "localhost:5002/api",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "paths": {
    "/user/registration": {
      "post": {
        "tags": [
          "user"
        ],
        "description": "Add a new user to the base",
        "parameters": [
          {
            "name": "Registration",
            "in": "body",
            "description": "Create a new user to the base",
            "schema": {
              "$ref": "#/definitions/Registration"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Registration success",
            "schema": {
              "$ref": "#/definitions/RegistrationSuccess"
            }
          },
          "400": {
            "description": "Invalid request data"
          },
          "409": {
            "description": "User already exists in the base"
          }
        }
      }
    },
    "/user/login": {
      "post": {
        "tags": [
          "user"
        ],
        "description": "Login user",
        "parameters": [
          {
            "name": "Login",
            "in": "body",
            "description": "Login user",
            "schema": {
              "$ref": "#/definitions/Login"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Login success",
            "schema": {
              "$ref": "#/definitions/LoginSuccess"
            }
          },
          "400": {
            "description": "Invalid request data"
          }
        }
      }
    },
    "/user/logout": {
      "post": {
        "tags": [
          "user"
        ],
        "description": "Logout user",
        "parameters": [
          {
            "name": "Logout",
            "in": "body",
            "description": "Logout user",
            "schema": {
              "$ref": "#/definitions/Logout"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Logout success",
            "schema": {
              "$ref": "#/definitions/LogoutSuccess"
            }
          },
          "400": {
            "description": "Invalid request data"
          }
        }
      }
    },
    "/user/delete": {
      "delete": {
        "tags": [
          "user"
        ],
        "description": "Remove user",
        "parameters": [
          {
            "name": "Remove",
            "in": "body",
            "description": "Remove user",
            "schema": {
              "$ref": "#/definitions/Remove"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Remove success",
            "schema": {
              "$ref": "#/definitions/RemoveSuccess"
            }
          },
          "400": {
            "description": "Invalid request data"
          }
        }
      }
    },
    "/user/auth": {
      "get": {
        "tags": [
          "user"
        ],
        "description": "Check authorization user. Dont forget add Bearer with space",
        "parameters": [
          {
            "name": "authorization",
            "security": [
              {
                "Bearer": []
              }
            ],
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Authorization success",
            "schema": {
              "$ref": "#/definitions/AuthSuccess"
            }
          },
          "401": {
            "description": "Authorization failed"
          }
        }
      }
    },
    "/tracker/action": {
      "post": {
        "tags": [
          "tracker"
        ],
        "description": "Add a new track to the base",
        "parameters": [
          {
            "name": "TrackerCreate",
            "in": "body",
            "description": "Create a new track to the base",
            "schema": {
              "$ref": "#/definitions/TrackerCreate"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Track create success",
            "schema": {
              "$ref": "#/definitions/TrackerCreateSuccess"
            }
          },
          "400": {
            "description": "Invalid request data"
          }
        }
      }
    },
    "/tracker/{id}/{date}": {
      "get": {
        "tags": [
          "tracker"
        ],
        "description": "Get select day tracks from base. Example id: \"10\" date: 2022-12-04",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "date",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Invalid request data"
          }
        }
      }
    },
    "/tracker/{id}/{from}/{to}": {
      "get": {
        "tags": [
          "tracker"
        ],
        "description": "Get range date tracks from base. Example id: \"10\" from: 2022-12-04, to: 2022-12-06",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "from",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "to",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Invalid request data"
          }
        }
      }
    }
  },
